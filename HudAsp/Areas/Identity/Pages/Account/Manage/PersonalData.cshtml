@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
        <div class="alert alert-danger">
            <b>Deleting this data will permanently remove your account, and this cannot be recovered.</b>
        </div>
        <div class="d-flex">
					<form id="download-data" asp-page="DownloadPersonalData" method="post">
							<button class="btn btn-outline-theme" type="submit">Download</button>
					</form>
          <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger ms-3">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
